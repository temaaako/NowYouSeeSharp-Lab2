        <Button x:Name="RecordInfoButton" Content="Обновить таблицу/создать таблицу" HorizontalAlignment="Left" Margin="10,169,0,0" VerticalAlignment="Top" Width="209" Height="77" Click="RecordInfoButton_Click"/>
        <Button x:Name="SaveButton" Content="Сохранить таблицу" HorizontalAlignment="Left" Margin="10,288,0,0" VerticalAlignment="Top" Width="209" Height="77" Click="SaveButton_Click"/>
        <DataGrid x:Name="Grid" HorizontalAlignment="Left" Height="399" Margin="234,10,0,0" VerticalAlignment="Top" Width="548" Loaded="Grid_Loaded" MouseUp="Grid_MouseUp" AutoGeneratingColumn="OnAutoGeneratingColumn" />

    </Grid>
</Window>
